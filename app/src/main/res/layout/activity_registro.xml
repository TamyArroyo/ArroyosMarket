<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@drawable/fondoh">

    <ImageView
        android:layout_width="346dp"
        android:layout_height="157dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FF7A38"
        android:layout_marginBottom="10dp"
        android:text="Registro"
        android:textStyle="bold"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Completar los Datos"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#A3FF6038"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etENombreCompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Nombre Completo"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/etEmailRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Email"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:textSize="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:id="@+id/etPasswordRegistro"
        android:layout_marginBottom="40sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:backgroundTint="#66FF5722"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Registrar"
        android:ems="7"
        android:id="@+id/btnRegistrar"
        android:fontFamily="sans-serif-light" />

</LinearLayout>